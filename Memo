books table
    ISBN (ISBN)
    title (書籍名)
    author (著者)
    publisher (出版社)
    genre (ジャンル)
    status (貸し出し状況) (clubroom lending)
    borrower (借用者)

create table books (
    ID int(3) unsigned zerofill not null auto_increment primary key,
    title varchar(240) collate utf8mb4_general_ci not null,
    author varchar(240) collate utf8mb4_general_ci not null,
    publisher varchar(100) collate utf8mb4_general_ci not null,
    status varchar(10) collate utf8mb4_general_ci not null,
    borrower varchar(20) collate utf8mb4_general_ci not null
) engine=InnoDB collate utf8mb4_general_ci;

https://qiita.com/tabo_purify/items/2575a58c54e43cd59630



各書籍 table
    ID (添字)
    borrower (借用者)
    date_time (手続き日時 UTCタイムスタンプ)
    dc (return borrow new delete)



create table books (
    ID int(3) unsigned zerofill not null auto_increment primary key,
    ISBN bigint(15) not null ,
    title varchar(240) collate utf8mb4_general_ci not null,
    author varchar(240) collate utf8mb4_general_ci not null,
    publisher varchar(100) collate utf8mb4_general_ci not null,
    genre varchar(100) collate utf8mb4_general_ci not null,
    status varchar(10) collate utf8mb4_general_ci not null default 'clubroom',
    borrower varchar(20) collate utf8mb4_general_ci
) engine=InnoDB collate utf8mb4_general_ci;

各部員 table
    ID (学生ID)
    product (借りたもの)
    date (借りた日時)

'CREATE TABLE `'.$ID.'`( ID varchar(10) NOT NULL PRIMARY KEY, product varchar(100) COLLATE utf8mb4_general_ci NOT NULL, date_time datetime NOT NULL DEFAULT current_timestamp) ENGINE=InnoDB COLLATE utf8mb4_general_ci;'




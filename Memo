CREATE TABLE 1234567890(ID int(3) unsignd zerofill not null auto_increment primary key, borrower varchar(10), date_time timestamp NOT NULL default current_timestamp, dc varchar(6) NOT NULL);

CREATE TABLE 1234567890(
ID int(3) unsigned zerofill NOT NULL AUTO_INCREMENT PRIMARY KEY,
borrower varchar(10) COLLATE utf8mb4_general_ci NOT NULL,
date_time timestamp NOT NULL DEFAULT current_timestamp,
dc varchar(6) COLLATE utf8mb4_general_ci NOT NULL
) ENGINE=InnoDB COLLATE utf8mb4_general_ci

CREATE TABLE `'.$isbn.'`( ID int(3) unsigned zerofill  NOT NULL AUTO_INCREMENT PRIMARY KEY, borrower varchar(10) COLLATE utf8mb4_general_ci NOT NULL, date_time timestamp NOT NULL DEFAULT current_timestamp, dc varchar(6) COLLATE utf8mb4_general_ci NOT NULL ) ENGINE=InnoDB COLLATE utf8mb4_general_ci;

